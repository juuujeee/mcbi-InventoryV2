
@{
    ViewBag.Title = "Inventory Layout";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>MCBI Inventory</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/datepicker.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark" id="navbar">
        <div class="d-flex navbar-wrapper">
            <div class="header-title">
                <a class="navbar-brand" href="#">
                    <span class="full-text">MCBI-Inventory</span>
                    <span class="mini-text">MIMS</span>
                </a>
            </div>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="mr-auto">
                    <button type="button" id="sidebarCollapse" class="btn btn-light">
                        <i class="fa fa-bars"></i>
                    </button>
                </div>
                <div class="ml-auto">
                    <p class="text-white">MCBI-Inventory Series @DateTime.Now.Year</p>
                </div>

            </div>
        </div>
    </nav>


    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar">
            @*<div class="sidebar-header">
                    <h3>Bootstrap Sidebar</h3>
                    <strong>BS</strong>
                </div>*@

            <ul class="list-unstyled">
                <li>
                    <a href="#">
                        <i class="fa fa-home"></i>
                        Home
                    </a>
                </li>
                <li class="active">
                    <a href="#inventorySubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fa fa-building"></i>
                        Inventory
                    </a>
                    <ul class="collapse list-unstyled" id="inventorySubmenu">
                        <li>
                            <a href="#" class="sub-menu">Item Stock Entry</a>
                        </li>
                        <li>
                            <a href="#" class="sub-menu">Item Stock Out</a>
                        </li>
                    </ul>
                </li>

            </ul>

        </nav>

        <!-- Page Content  -->
        <div id="content">

            @RenderBody()

        </div>
    </div>

