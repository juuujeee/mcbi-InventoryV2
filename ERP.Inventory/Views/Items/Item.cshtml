<div class="settings__wrapper">
    <fieldset class="settings__fieldset">
        <legend class="fieldset__title">Adding Item</legend>
        <div class="fieldset__content" id="fieldset__content__wrapper1">
            <div class="main__content">
                <div class="header" style=" margin-bottom: 10px">
                    <label for="name">Name:</label>
                    <input style="width:300px" type="text" id="name" name="name"><br><br>

                    <input type="checkbox" name="name" value="" />
                    <label style="font-size: 25px">has Attributes</label>
                </div>
                <div class="main__footer" style="padding-top: 10px">

                    @for (var i = 1; i <= 5; i++)
                    {
                        <div class="content">
                            <div class="content__text">
                                <input type="checkbox" name="name" value="" />
                                <div>
                                    <span>Attribute @i</span>

                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="fieldset__footer">
                    <button>Save</button>
                </div>
            </div>
